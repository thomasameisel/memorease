<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.memorease.memorease.MemoreaInfoFragment"
    android:background="@color/background_material_light">

    <include layout="@layout/collapsing_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/collapsible_toolbar_height">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:paddingTop="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_text_size"
                android:text="Question: "/>
            <TextView
                android:id="@+id/text_view_memorea_info_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:textSize="@dimen/card_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_text_size"
                android:text="Answer: "/>
            <TextView
                android:id="@+id/text_view_memorea_info_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:textSize="@dimen/card_text_size"/>
            <TextView
                android:id="@+id/text_view_memorea_info_hint_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_text_size"
                android:text="Hint: "/>
            <TextView
                android:id="@+id/text_view_memorea_info_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:textSize="@dimen/card_text_size"/>
        </GridLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_edit"
        android:onClick="editMemorea"/>
</android.support.design.widget.CoordinatorLayout>